{
  "name": "climate-economy-assistant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern='Integration'",
    "test:components": "jest --testNamePattern='Component'",
    "test:snapshots": "jest --testNamePattern='Snapshot'",
    "test:george": "jest --testNamePattern='George Nekwaya'",
    "test:george-backend": "cd backend && python test_george_nekwaya_triple_access.py",
    "test:george-full": "npm run test:george && npm run test:george-backend",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:full-suite": "npm run test:ci && cd backend && python test_enhanced_comprehensive_workflow.py",
    "test:backend": "cd backend && python -m pytest",
    "test:backend-enhanced": "cd backend && python test_enhanced_comprehensive_workflow.py",
    "test:audit": "npm run test:full-suite && npm run test:coverage",
    "test:george-audit": "npm run test:george-full && echo 'George triple access tests completed'",
    "pre-commit": "npm run lint && npm run test:ci"
  },
  "dependencies": {
    "@copilotkit/backend": "^0.37.0",
    "@copilotkit/react-core": "^1.8.14",
    "@copilotkit/react-ui": "^1.8.14",
    "@copilotkit/runtime": "^1.8.14",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.50.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.43",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "next-themes": "^0.4.6",
    "node-fetch": "^2.7.0",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.15.3",
    "redis": "^5.5.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "msw": "^1.3.2",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js|jsx)",
      "**/*.(test|spec).(ts|tsx|js|jsx)"
    ],
    "testTimeout": 30000,
    "clearMocks": true,
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "description": "A comprehensive platform connecting job seekers with climate economy opportunities, featuring AI-powered matching, partner organizations, and administrative oversight.",
  "main": ".eslintrc.dev.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
